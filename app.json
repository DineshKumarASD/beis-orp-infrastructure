[
  {
    "name": "${container_name}",
    "image": "${docker_image_url}:latest",
    "family": "beis-orp",
    "essential": true,
    "cpu": 128,
    "memory": 256,
    "links": [],
    "portMappings": [
      {
        "containerPort": 3000,
        "protocol": "tcp"
      }
    ],
    "environment": [
      {
        "name": "ENVIRONMENT",
        "value": "${environment}"
      },
      {
        "name": "DOMAIN",
        "value": "${domain}"
      },
      {
        "name": "S3_UPLOAD_BUCKET",
        "value": "${s3_upload_bucket}"
      },
      {
        "name": "MC_SERVER",
        "value": "${mc_server}"
      },
      {
        "name": "MC_LIST",
        "value": "${mc_list}"
      },
      {
        "name": "MC_API_KEY",
        "value": "${mc_api_key}"
      },
      {
        "name": "CLOUDWATCH_GROUP_NAME",
        "value": "${cloudwatch_group_name}"
      },
      {
        "name": "CLOUDWATCH_STREAM_NAME",
        "value": "${cloudwatch_stream_name}"
      }
    ],
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group": "${aws_log_group}",
        "awslogs-region": "${region}",
        "awslogs-stream-prefix": "${stream_prefix}"
      }
    }
  }
]
